{% macro user_delete_modal() %}
	<div class="modal fade" id="admin_user-delete-modal">
	  	<div class="modal-dialog">
		    <div class="modal-content">
		      	<div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal">x</button>
			        
			        <h4 class="modal-title">
			        	Supprimer l'utilisateur
			        </h4>
			     </div>

		      	<div class="modal-body admin_obs-modal-body">
		      		Êtes-vous certain(e) de vouloir supprimer définitivement cet utilisateur ?<br />
		      		Cette action est irréversible.
		      	</div>

		      	<div class="modal-footer">
			        <a class="btn btn-success" href="{{ path('admin_home') }}" title="Confirmer la suppression de l'utilisateur" id="admin_user-delete-modal-confirm">Confirmer</a>
			        <button class="btn btn-danger" data-dismiss="modal">Annuler</button>
			     </div>
		    </div>
	  	</div>
	</div>
{% endmacro %}
